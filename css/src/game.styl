*
	margin 0
	padding 0
	box-sizing border-box


body
	background #000 url('/images/bg_body.jpg') 50% 0 repeat
	// background #fff
	font-family: 'Architects Daughter', cursive, Arial;
	font-size 18px

h1
	font-size 40px
	font-weight normal

.game
	margin 30px auto 0
	text-align center
	color #fff
	user-select none

	&__options
		margin 0 auto 10px
		text-align right
		width 90%
	& .option
		display inline-block
		margin-left 20px
		& span
			display inline-block
		& .timer
			width 80px
			text-align left


.maze
	border 10px solid #946538
	display inline-block
	margin 0 auto
	position relative
	&::after
		content ''
		display block
		background rgba(112,95,115,0.15)
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		box-shadow inset 0px 0px 100px rgba(112,95,115,1)
		opacity 0
	&.invisible::after
		opacity 1
	& canvas
		margin auto
